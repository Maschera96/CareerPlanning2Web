
.submit {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	margin-top: 50px;
}
.mybtn {
	height: 40px;
	width: 98px;
}
.avatar-uploader {
	max-width: 180px;
	border: 1px dashed #8e8e8e;
	border-radius: 6px;
	cursor: pointer;
	position: relative;
	overflow: hidden;
	margin: 5px 0px 20px 0px;
}
.avatar-uploader:hover {
	border-color: #409EFF;
}
.avatar-uploader-icon {
	font-size: 28px;
	color: #8c939d;
	width: 178px;
	height: 178px;
	line-height: 178px;
	text-align: center;
}
.avatar {
	width: 178px;
	height: 178px;
	display: block;
}

